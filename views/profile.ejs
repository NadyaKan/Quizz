<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
          integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/profile.css" type="text/css"/>
</head>

<body>
                      <!-- BACK BUTTON -->

      <div>
        <form action="/" method="get">
           <button class="back-btn">Main Menu</button>
        </form>
      </div>

                  <!-- REGISTER CONTAINER -->
    <div class="container">
        <h1>Profile</h1>
        <form>
        <% for(let i = 0; i < userInfo.length; i++){ %>
        <div class="mb-3 row">
            <label for="username" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input type="text" class="name input-box" readonly id="username" value="<%= userInfo[i].name %>">
            </div>
        </div>
        <div class="mb-3 row">
            <label for="email" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <input type="text" class="email input-box" readonly id="email" value="<%= userInfo[i].email %>">
            </div>
        </div>
        <div class="mb-3 row">
            <label for="newpass" class="col-sm-2 col-form-label birth-date-label">Date of birth</label>
            <div class="col-sm-10">
                <input type="text" class="date input-box" readonly id="date" value="<%= userInfo[i].birthDate %>">
            </div>
        </div>
        <% } %>

        </form>
    </div>
</body>

</html>
